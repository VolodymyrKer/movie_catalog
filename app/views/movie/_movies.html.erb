<div class="container">
  <div id="home" class="row row-cols-1 row-cols-md-5 g-5 justify-content-center">
    <% movies.each do |movie| %>
      <div class="col-md-7 col-lg-5 col-sm-11">
        <%= link_to movie do %>
          <div class="card align-items-center">

            <div class="card-body">
              <h6 class="card-title">
                <%= movie.name %>
                <br>
                <%= movie.desc %>
                <br>
                <%= movie.year %>
                <br>
                <%= movie.rating %>
              </h6>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <br/>
  <%== pagy_bootstrap_nav(pagy) %>
</div>